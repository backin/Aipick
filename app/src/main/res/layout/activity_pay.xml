<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E2742"
    android:paddingTop="20dp"
    >
    <include

        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pay_time"
        android:textColor="@color/color_home"
        android:textSize="12sp"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$00"
        android:textColor="@color/color_yellow"
        android:textSize="48sp"
        android:gravity="center_horizontal"
        />

    <RelativeLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@drawable/pay_gradient_bg"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yuepay"
            android:textColor="@color/color_home"
            android:textSize="16sp"
            android:drawableLeft="@mipmap/ic_residual"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            />
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="余额"-->
            <!--android:textColor="@color/color_home"-->
            <!--android:textSize="12sp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentRight="true"-->
          <!--android:layout_marginRight="20dp"-->
            <!--/>-->
    </RelativeLayout>

    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alipay"
        android:textColor="@color/color_home"
        android:textSize="16sp"
        android:drawableLeft="@mipmap/ic_alipay"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/pay_gradient_bg"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wechat"
        android:textColor="@color/color_home"
        android:textSize="16sp"
        android:drawableLeft="@mipmap/ic_wechat"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/pay_gradient_bg"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />


</LinearLayout>
    <TextView
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:id="@+id/tv_suscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/robot_bt_bg"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/confirm_pay"
        android:textColor="@color/color_white"
        android:textSize="15sp" />
</RelativeLayout>