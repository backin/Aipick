<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="66dp"

    >

    <ImageView
        android:id="@+id/mImage_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/ic_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="14dp"
        />

    <TextView
        android:id="@+id/mTvNoticeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/mImgIcon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:textSize="16sp"
        android:text="1111"
        android:textColor="@color/color_home"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/mTvTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/mTvNoticeTitle"
        app:layout_constraintLeft_toRightOf="@id/mImgIcon"
        app:layout_constraintTop_toBottomOf="@id/mTvNoticeTitle"
        android:layout_marginTop="3dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="12sp"
        android:text="2019"
        android:textColor="@color/color_home"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/part_line_color"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        />
    <ImageView
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/mImgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/mine_message_icon"
        />

</android.support.constraint.ConstraintLayout>